{% extends 'root.html.twig' %}

{% block content %}
    <h1>Update the {{ cuisine.getName }} category</h1>

    <form action="/cuisines/{{ cuisine.getId }}" method="post">
        <input name="_method" type="hidden" value="patch">

        <label for="name">Rename your category:</label>
        <input id="name" name="name" type="text">

        <button type="submit">Update</button>
    </form>

    <form action="/cuisines/{{ cuisine.getId }}" method="post">
        <input name="_method" type="hidden" value="delete">

        <button type="submit">Delete this cuisine</button>
    </form>

    <p><a href='/'>Back</a></p>
{% endblock %}
